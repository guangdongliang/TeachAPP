<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.firstoscilloscope.MainActivity" >
    
    
        

	 
	    <SeekBar
	        android:id="@+id/skBar1"
	        android:max="100"
	        android:progress="30"
	        android:layout_alignParentRight="true"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        />
	    <TextView
	        android:id="@+id/tV1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@+id/skBar1"
	        android:layout_alignTop="@+id/skBar1"
	        android:text="@string/frequency"
	        />
	    <TextView
	        android:id="@+id/tV2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@+id/skBar2"
	        android:layout_alignTop="@+id/skBar2"
	        android:text="@string/amplitude"
	        />
	    <SeekBar
	        android:id="@+id/skBar2"
	        android:max="100"
	        android:progress="30"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/skBar1"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        />
	    <TextView
	        android:id="@+id/tV3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/tV2"
	        android:layout_alignTop="@+id/skBar3"
	        android:text="@string/resolution"
	        />
	    <SeekBar
	        android:id="@+id/skBar3"
	        android:max="100"
	        android:progress="30"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/skBar2"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        />
	     <Spinner android:id="@+id/Spinner01"
           android:layout_width="100dp"
           android:layout_height="wrap_content"
           android:layout_below="@+id/skBar3"
           android:layout_alignParentRight="true"></Spinner>

   
     <SurfaceView android:id="@+id/SurfaceView01"  
        android:layout_height="fill_parent" 
        android:layout_width="match_parent"
        android:layout_toLeftOf="@+id/tV1"
        android:paddingLeft="0dp"
        ></SurfaceView>  

</RelativeLayout>
